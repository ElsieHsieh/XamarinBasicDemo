<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XaDemo.View.RestaurantLayout">
  <StackLayout Orientation="Vertical" Padding="20">
    <ScrollView  Orientation = "Vertical" VerticalOptions="StartAndExpand">
      <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
        <Image x:Name="Restaurant_img" />

        <Label Text="餐廳名稱" TextColor="#8886B5" FontSize="16" Margin="0,0,0,-10"/>
        <Label Text="真正的餐廳名稱" x:Name="Restaurant_name" TextColor="#3D37ED" FontSize="24" Margin="0,0,0,0"/>

        <Label Text="餐廳類別" TextColor="#8886B5" FontSize="16" Margin="0,0,0,-10"/>
        <Label Text="真正的餐廳類別" x:Name="Restaurant_type" TextColor="#3D37ED" FontSize="24"/>

        <Label Text="地點" TextColor="#8886B5" FontSize="16" Margin="0,0,0,-10"/>
        <Label Text="真正的地點" x:Name="Restaurant_location" TextColor="#3D37ED" FontSize="24"/>

        <Label Text="備註" TextColor="#8886B5" FontSize="16" Margin="0,0,0,-10"/>
        <Label Text="真正的備註" x:Name="Restaurant_note" TextColor="#3D37ED" FontSize="24"/>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</ContentPage>